@model OlaWakeel.Dto.Auth.RegisterDto
@{ Layout = null; }

<style>
    .center {
        margin-left: auto;
        margin-right: auto;
        width: 50%;
        display: block;
    }
    
</style>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta content="width=device-width, initial-scale=1" name="viewport" />
    <title>OlaWakeel - Register Dashbaord</title>
    <!-- Favicon-->
    <link rel="icon" href="~/assets/images/favicon.ico" type="image/x-icon">

    <!-- Plugins Core Css -->
    <link href="~/assets/css/app.min.css" rel="stylesheet">

    <!-- Custom Css -->
    <link href="~/assets/css/style.css" rel="stylesheet" />
    <link href="~/assets/css/pages/extra_pages.css" rel="stylesheet" />
</head>

<body class="login-page">
    <div class="limiter">
        <div class="container-login100 page-background">
            <div class="wrap-login100">
                <form class="login100-form validate-form" asp-controller="Auth" asp-action="Register1" method="post">
                    <span>
                        @*<img src="~/Uploads/@ViewBag.ShopLogo" class="col-md-5 center"/>*@
                        <img src="~/Uploads/logoxy.png" class="col-md-7 center" />
                    </span>
                    <span class="login100-form-title p-b-34 p-t-27">
                        Register X
                    </span>
                    <div class="wrap-input100 validate-input">
                        @*<label class="input100">Email</label>*@
                        <input type="email" required asp-for="email" placeholder="Email" style="border-radius: 5px" />

                    </div>
                    <div class="wrap-input100 validate-input">
                       
                        <input type="text" required asp-for="userName"  placeholder="Username" style="border-radius: 5px"/>
                    </div>
                    <div class="wrap-input100 validate-input">
                        @*<label class="input100">Password</label>*@
                        <input type="password" required asp-for="password" placeholder="Password" style="border-radius: 5px" />
                    </div>
                    <div class="wrap-input100 validate-input">
                        @*<label class="input100">First Name</label>*@
                        <input type="text" required asp-for="firstName" placeholder="First Name" style="border-radius: 5px" />

                    </div>
                    <div class="wrap-input100 validate-input">
                        @*<label class="input100">Last Name</label>*@
                        <input type="text" required asp-for="lastName" placeholder="Last Name" style="border-radius: 5px" />
                    </div>
                    <div class="container-login100-form-btn">
                        <button class="login100-form-btn" type="submit">
                            Register
                        </button>
                    </div>
                    <div class="text-center p-t-50">
                        <a class="txt1" asp-action="Login" asp-controller="Auth">
                            Login
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Plugins Js -->

    <script src="~/assets/js/app.min.js"></script>

    <!-- Extra page Js -->
    <script src="~/assets/js/pages/examples/pages.js"></script>

</body>
</html>