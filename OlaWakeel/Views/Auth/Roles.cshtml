@model OlaWakeel.Dto.Role.RoleDto
@{
    ViewData["Title"] = "CreateRole";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}
<div class="app-page-title">
    <div class="page-title-wrapper">
        <div class="page-title-heading">
            <div class="page-title-icon">
                <i class="pe-7s-id icon-gradient bg-mean-fruit"></i>
            </div>
            <div>
                Roles
            </div>
        </div>
    </div>
</div>
<div class="container-fluid">
    <div class="card">
        <div class="card-body">
            <h4 class="">Edit Degree</h4>
            <div class="col-lg-12">
                <form method="post" asp-action="CreateRole" asp-controller="Auth">
                    <div class="row clearfix">
                        <div class="col-lg-10" style="padding-left: 0px;">
                            <div class="form-group">
                                <div class="form-line">
                                    <input type="text" asp-for="RoleName" class="form-control" placeholder="Role Name" />
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-2" style="text-align:center">
                            <div class="form-group">
                                <div class="form-line">
                                    <button class="mb-2 mr-2 btn btn-shadow btn-info" type="submit">Add role</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="col-lg-12" style="padding-left: 0px;">
                <h4 class="card-inside-title">Appication Roles</h4>
                <table class="table table-bordered table-striped table-hover js-basic-example dataTable">
                    <thead>
                        <tr><th>Roles</th></tr>
                    </thead>
                    <tbody>
                        @foreach (var role in Model.RoleList)
                        {
                            <tr><td>@role.Name</td></tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


