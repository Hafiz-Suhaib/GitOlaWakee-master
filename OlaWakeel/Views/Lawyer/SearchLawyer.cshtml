@model IEnumerable<OlaWakeel.Models.Lawyer>

@{
    ViewData["Title"] = "SearchLawyer";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}


@{ int i = 1;}
<div class="app-page-title">
    <div class="page-title-wrapper">
        <div class="page-title-heading">
            <div class="page-title-icon">
                <i class="lnr-graduation-hat icon-gradient bg-mean-fruit"></i>
            </div>
            <div>
                Search Lawyers
            </div>
        </div>
    </div>
</div>
<div class="main-card mb-3 card">
    <div class="card-body">
        <h5 class="card-title">Track Lawyer Here</h5>
        <form method="get" asp-action="TrackLawyer">
            <div class="position-relative form-group">
                <label for="exampleEmail" class="">Search Lawyer</label>
                <input name="searchapp" placeholder="Type here..." type="search" value="@ViewData["Lawyersearch"]" class="form-control">
                <br />
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div class="card mb-3">
    <div class="card-body">
        <div class="col-sm-12">
            <table style="width: 100%;" class="table table-hover table-striped table-bordered dataTable dtr-inline listing-datatable" role="grid" aria-describedby="example_info">
                <thead>
                    <tr>
                        <th>Sr#</th>
                        <th>
                            Name
                        </th>
                        <th>
                            Charges in Rupees
                        </th>
                        <th>
                            Charges in Dollar
                        </th>
                        <th>
                            Experience
                        </th>

                        <th>
                            Action
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>@i</td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FirstName)
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                        <td>
                            Rs.  @Html.DisplayFor(modelItem => item.VirtualChargesPkr)
                        </td>
                        <td>
                            $ @Html.DisplayFor(modelItem => item.VirtualChargesUs)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TotalExperience) Years
                        </td>
                        <!--<td>
                         <a class="mb-2 mr-2 btn-icon btn-icon-only btn-shadow btn-dashed btn btn-outline-info" href="~/Lawyer/LawyerProfile2/@item.LawyerId"><i class="lnr-user"> </i></a>-->
                        @*<a class="mb-2 mr-2 btn-icon btn-icon-only btn-shadow btn-dashed btn btn-outline-success" href="~/Lawyer/LawyerProfile/@item.LawyerId" target="_blank"><i class="fas fa-info-circle"></i></a>*@
                        <!--</td>-->
                        <td>
                            <a class="mb-2 mr-2 btn-icon btn-icon-only btn-shadow btn-dashed btn btn-outline-success" data-backdrop="false" data-toggle="modal" data-target=".details_@i" href="~/Lawyer/LawyerProfile2/@item.LawyerId"><i class="fas fa-info-circle"></i></a>
                            <div class="modal bd-example-modal-sm details_@i" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel">
                                <div class="modal-dialog modal-lg">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="exampleModalLongTitle">@item.FirstName @item.LastName</h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <!--Popup Open-->

                                        <div class="card-body">
                                            <div id="example_wrapper" class="dataTables_wrapper dt-bootstrap4">
                                                <div class="row">
                                                    <div class="col-sm-12">
                                                        <table style="width: 100%;" id="example" class="table table-hover table-striped table-bordered dataTable dtr-inline" role="grid" aria-describedby="example_info">
                                                            <thead>
                                                                <tr>
                                                                    <th>Name</th>
                                                                    <th>Contact</th>
                                                                    <th>Gender</th>
                                                                    <th>City</th>

                                                                </tr>
                                                            </thead>
                                                            <tbody>
                                                                <tr>
                                                                    <td>@item.FirstName @item.LastName</td>
                                                                    <td>@item.Contact</td>
                                                                    <td>@item.Gender</td>
                                                                    <td>
                                                                        @item.City
                                                                    </td>

                                                                </tr>
                                                            </tbody>

                                                        </table>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>


                                        <!--Popup Close-->
                                       
                                    </div>
                                </div>
                            </div>


                        </td>







                    </tr>
                        i++;
                    }

                </tbody>
                <tfoot>
                    <tr>
                        <th>Sr#</th>
                        <th>
                            Name
                        </th>
                        <th>
                            Charges in Rupees
                        </th>
                        <th>
                            Charges in Dollar
                        </th>
                        <th>
                            Experience
                        </th>
                        <th>
                            Action
                        </th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>

</div>

