@model IEnumerable<OlaWakeel.Models.Lawyer>

@{
    //ViewData["Title"] = "TrackLawyer";
    ViewData["Title"] = ViewBag.Filter;
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<div class="app-page-title">
    <div class="page-title-wrapper">
        <div class="page-title-heading">
            <div class="page-title-icon">
                <i class="lnr-graduation-hat icon-gradient bg-mean-fruit"></i>
            </div>
            <div>
                Track Lawyer
            </div>
        </div>
    </div>
</div>
<div class="main-card mb-3 card">
    <div class="card-body">
        <h5 class="card-title">Track Lawyer Here</h5>
        <form method="get" asp-action="TrackLawyer">
            <div class="position-relative form-group">
                <label for="exampleEmail" class="">Search Lawyer</label>
                <input name="searchapp" placeholder="Type here..." type="search" value="@ViewData["Lawyersearch"]" class="form-control">
               <br />
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


