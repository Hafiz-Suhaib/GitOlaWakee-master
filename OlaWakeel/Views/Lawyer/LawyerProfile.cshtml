                                <div class="scroll-area-sm">
                                    <div class="scrollbar-container ps--active-y">
                                        <div class="table-responsive">
                                            <table id="new-orders-table" class="table table-hover table-xl mb-0">
                                                <thead>
                                                    <tr>
                                                        <th> Name</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var cli in Model.LawyerClients)
                                                    {
                                                        <tr>
                                                            <td>@cli.ClientName</td>
                                                        </tr>
                                                    }

                                                </tbody>
                                                <tfoot>
                                                    <tr>
                                                        <th>Name</th>
                                                    </tr>
                                                </tfoot>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
                <div class="tab-pane" id="tab-2-eg5">
                    <div class="p-3">
                        <div class="main-card mb-3 card">
                            <div class="card-header">
                                <i class="fa fa-fw" aria-hidden="true" title="Copy to use clock-o"></i>&nbsp;
                                Time Slots
                            </div>
                            <div class="card-body">
                                <div class="scroll-area-sm">
                                    <div class="scrollbar-container ps--active-y">
                                        <div class="table-responsive">
                                            <table id="new-orders-table" class="table table-hover table-xl mb-0">
                                                <thead>
                                                    <tr>
                                                        <th>Day</th>
                                                        <th>Slot Type</th>
                                                        <th>Location</th>
                                                        <th>Appoinment Fee</th>
                                                        <th>Charges</th>
                                                        <th>Time From</th>
                                                        <th>Time To</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var time in Model.LawerTimings)
                                                    {
                                                        <tr>
                                                            <td>@time.Day</td>
                                                            <td>@time.SlotType</td>
                                                            @if (time.LawyerAddressId != null)
                                                            {
                                                                var addr = Model.LawyerAddresses.Where(x => x.LawyerAddressId == time.LawyerAddressId).SingleOrDefault().Address;
                                                                <td>@addr</td>

                                                            }
                                                            else
                                                            {
                                                                <td></td>
}


                                                            <td>@time.AppoinmentFee</td>
                                                            <td>@time.Charges</td>
                                                            <td>@time.TimeFrom</td>
                                                            <td>@time.TimeTo</td>
                                                        </tr>
                                                    }

                                                </tbody>
                                                <tfoot>
                                                    <tr>
                                                        <th>Day</th>
                                                        <th>Slot Type</th>
                                                        <th>Location</th>
                                                        <th>Appoinment Fee</th>
                                                        <th>Charges</th>
                                                        <th>Time From</th>
                                                        <th>Time To</th>
                                                    </tr>
                                                </tfoot>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
