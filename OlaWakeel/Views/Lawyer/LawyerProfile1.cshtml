@model OlaWakeel.ViewModels.AppointmentVM
@{
    ViewData["Title"] = "LawyerProfile1";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

@section css{

}
<div class="app-page-title">
    <div class="page-title-wrapper">
        <div class="page-title-heading">
            <div class="page-title-icon">
                <i class="lnr-user icon-gradient bg-ripe-malin"> </i>
            </div>
            <div>
                ProfileX
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-4">
        <div class="card-shadow-primary profile-responsive card-border mb-3 card">
            <div class="dropdown-menu-header">
                <div class="dropdown-menu-header-inner bg-focus">
                    <div class="menu-header-image opacity-3" style="background-image: url('/assets/images/dropdown-header/city4.jpg');"></div>
                    <div class="menu-header-content btn-pane-right">
                        <div class="avatar-icon-wrapper mr-2 avatar-icon-xl">
                            <div class="avatar-icon rounded">

                                <img src="\assets\images\avatars\12.jpg" alt="Avatar 5">
                                @if (Model.ProfilePic != null)
                                {
                                    <img src="~/Uploads/@Model.ProfilePic" alt="Avatar 6">
                                }

                            </div>
                        </div>
                        <div>
                            <h5 class="menu-header-title">@Model.FirstName @Model.LastName</h5>
                            <h6 class="menu-header-subtitle"> @Model.LawyerLicenses.Count()</h6>

                        </div>
                        <div class="menu-header-btn-pane">
                            <button class="ladda-button btn btn-pill btn-dark" data-style="slide-right">
                                <span class="ladda-label">Load Click</span>
                                <span class="ladda-spinner"></span><div class="ladda-progress" style="width: 0px;"></div>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <ul class="list-group list-group-flush">
                <li class="bg-warm-flame list-group-item">
                    <div class="widget-content p-0">
                        <div class="widget-content-wrapper">
                            <div class="widget-content-left mr-3">
                                <div class="icon-wrapper m-0">
                                    <b class="text-primary"></b>
                                </div>
                            </div>
                            <div class="widget-content-left">
                                <span>City: @Model.City</span>
                            </div>
                        </div>
                    </div>
                </li>
                <li class="p-0 list-group-item">
                    <div class="grid-menu grid-menu-2col">
                        <div class="no-gutters row">
                            <div class="col-sm-6">
                                <button class="btn-icon-vertical btn-square btn-transition btn btn-outline-link">
                                    <i class="lnr-license btn-icon-wrapper btn-icon-lg mb-3"> </i>
                                  
                                    @*@foreach(var L in Model.LawyerList){
                                            @foreach(var A in Model.AppointmentList)
                                            {
                                                if(A.LawyerId == L.LawyerId)
                                                {
                                                    <h5>@L.FirstName; @A.AppointmentCode</h5>
                                                }
                                            }
                                        }*@
                                    <span>Total Appointments :@Model.AppointmentList.Count()</span>
                                </button>
                            </div>
                            <div class="col-sm-6">
                                <button class="btn-icon-vertical btn-square btn-transition btn btn-outline-link">
                                    <i class="lnr-map btn-icon-wrapper btn-icon-lg mb-3"> </i>  @if (Model != null)
                                    {
                                        <span>Total Clients :@Model.LawyerClients.Count()  </span>
                                    }

                                </button>
                            </div>
                            <div class="col-sm-6">
                                <button class="btn-icon-vertical btn-square btn-transition btn btn-outline-link">
                                    <i class="lnr-music-note btn-icon-wrapper btn-icon-lg mb-3"></i>
                                    @if (Model != null)
                                    {
                                        <span>Contact :@Model.Contact   </span>
                                    }
                                </button>
                            </div>
                            <div class="col-sm-6">
                                <button class="btn-icon-vertical btn-square btn-transition btn btn-outline-link">
                                    <i class="lnr-heart btn-icon-wrapper btn-icon-lg mb-3"> </i>
                                    @if (Model != null)
                                    {
                                        <span>Status :@Model.OnlineStatus   </span>
                                    }
                                </button>
                            </div>
                        </div>
                    </div>
                </li>
            </ul>
        </div>
    </div>
    <div class="col-md-8 ">
        <div class="card-hover-shadow profile-responsive card-border border-success mb-3 card">
            <div class="dropdown-menu-header">
                <div class="dropdown-menu-header-inner bg-success">
                    <div class="menu-header-content">
                        <div class="avatar-icon-wrapper btn-hover-shine mb-2 avatar-icon-xl">
                            <div class="avatar-icon rounded">
                                <img src="\Uploads\@Model.ProfilePic" alt="Avatar 6">
                            </div>
                        </div>
                        <div>
                            <h5 class="menu-header-title">@Model.FirstName @Model.LastName</h5>
                            <h6 class="menu-header-subtitle" style="margin-left:45%">
                                <select id="css-stars" asp-for="Rating">
                                    <option value="1">1</option>
                                    <option value="2">2</option>
                                    <option value="3">3</option>
                                    <option value="4">4</option>
                                    <option value="5">5</option>
                                </select>
                            </h6>
                            <h6 class="menu-header-subtitle">@Model.TotalExperience Year Experience</h6>
                        </div>
                        <div class="menu-header-btn-pane pt-2">
                            <div role="group" class="btn-group text-center">
                                <div class="nav">
                                    <a href="#tab-2-eg1" data-toggle="tab" class="active btn btn-dark mr-1 ml-1">Personal Info</a>
                                    <a href="#tab-2-eg2" data-toggle="tab" class="btn btn-dark mr-1 ml-1">Qualification</a>
                                    <a href="#tab-2-eg3" data-toggle="tab" class="btn btn-dark mr-1 ml-1">Experienece</a>
                                    <a href="#tab-2-eg4" data-toggle="tab" class="btn btn-dark mr-1 ml-1">Clients</a>
                                    <a href="#tab-2-eg5" data-toggle="tab" class="btn btn-dark mr-1 ml-1">TimeSlots</a>
                                    <a href="#tab-2-eg6" data-toggle="tab" class="btn btn-dark mr-1 ml-1">License</a>
                                    <a href="#tab-2-eg7" data-toggle="tab" class="btn btn-dark mr-1 ml-1">Services</a>
                                    <a href="#tab-2-eg8" data-toggle="tab" class="btn btn-dark mr-1 ml-1">Offices</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="p-0 card-body">
                <div class="tab-content">
                    <div class="tab-pane active show" id="tab-2-eg1">
                        <div class="p-3">
                            <div class="main-card mb-3 card" style="height:296px">
                                <div class="card-header">
                                    <i class="fa fa-fw" aria-hidden="true" title="Copy to use info-circle"></i>&nbsp;
                                    Personal Info
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-3"><b>Date Of Birth</b></div>
                                        <div class="col-md-3"><b>Gender</b></div>
                                        <div class="col-md-3"><b>Cnic</b></div>
                                        <div class="col-md-3"><b>Contact</b></div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-3">@Model.DateOfBirth</div>
                                        <div class="col-md-3">@Model.Gender</div>
                                        <div class="col-md-3">@Model.Cnic</div>
                                        <div class="col-md-3">@Model.Contact</div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-3"><b>UserName</b></div>
                                        <div class="col-md-3"><b>Email</b></div>
                                        <div class="col-md-3"><b>City</b></div>
                                        <div class="col-md-3"><b>Country</b></div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-3">@Model.AppUser.UserName</div>
                                        <div class="col-md-3">@Model.AppUser.Email</div>
                                        <div class="col-md-3">@Model.City</div>
                                        <div class="col-md-3">@Model.Country</div>
                                    </div><br />
                                    <div class="row">
                                        <div class="col-md-12"><b>Biography</b></div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12">@Model.Biography</div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12"><b>Languages</b></div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <table>
                                                <tr>
                                                    @foreach (var lang in Model.lawyerLanguages)
                                                    {
                                                        <td>
                                                            @lang.Language
                                                        </td>
                                                    }
                                                </tr>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane" id="tab-2-eg2">
                        <div class="p-3">
                            <div class="main-card mb-3 card">
                                <div class="card-header">
                                    <i class="fa fa-fw" aria-hidden="true" title="Copy to use graduation-cap"></i>&nbsp;
                                    Qualification
                                </div>
                                <div class="card-body">
                                    <div class="scroll-area-sm">
                                        <div class="scrollbar-container ps--active-y">
                                            <div class="table-responsive">
                                                <table id="new-orders-table" class="table table-hover table-xl mb-0">
                                                    <thead>
                                                        <tr>
                                                            <th>Degree Type</th>
                                                            <th>Degree Name</th>
                                                            <th>Field Name</th>
                                                            <th>Complilition Year</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @foreach (var quali in Model.LawyerQualifications)
                                                        {
                                                            <tr>
                                                                <td>@quali.Degree.DegreeTypes.TypeName</td>
                                                                <td>@quali.Degree.Name</td>
                                                                @if (quali.SpecializationId != null)
                                                                {
                                                                    <td>@quali.Specialization.SpecializationName</td>
                                                                }
                                                                else
                                                                {
                                                                    <td>None</td>
                                                                }
                                                                <td>@quali.CompletionYear</td>
                                                            </tr>
                                                        }
                                                    </tbody>
                                                    <tfoot>
                                                        <tr>
                                                            <th>Degree Type</th>
                                                            <th>Degree Name</th>
                                                            <th>Field Name</th>
                                                            <th>Complilition Year</th>
                                                        </tr>
                                                    </tfoot>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane" id="tab-2-eg3">
                        <div class="p-3">
                            <div class="main-card mb-3 card">
                                <div class="card-header">
                                    <i class="fa fa-fw" aria-hidden="true" title="Copy to use shopping-bag"></i>&nbsp;
                                    Experience
                                </div>
                                <div class="card-body">
                                    <div class="scroll-area-sm">
                                        <div class="scrollbar-container ps--active-y">
                                            <div class="table-responsive">
                                                <table id="new-orders-table" class="table table-hover table-xl mb-0">
                                                    <thead>
                                                        <tr>
                                                            <th>Service Name</th>
                                                            <th>Experience Years</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @foreach (var expe in Model.LawyerExperiences)
                                                        {
                                                            <tr>
                                                                <td>@expe.CaseCategory.Name</td>
                                                                <td>@expe.ExperienceYears YEAR</td>
                                                            </tr>
                                                        }
                                                    </tbody>
                                                    <tfoot>
                                                        <tr>
                                                            <th>Service Name</th>
                                                            <th>Experience Years</th>

                                                        </tr>
                                                    </tfoot>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane" id="tab-2-eg4">
                        <div class="p-3">
                            <div class="main-card mb-3 card">
                                <div class="card-header">
                                    <i class="fa fa-fw" aria-hidden="true" title="Copy to use user-circle"></i>&nbsp;
                                    Clients
                                </div>
                                <div class="card-body">
                                    <div class="scroll-area-sm">
                                        <div class="scrollbar-container ps--active-y">
                                            <div class="table-responsive">
                                                <table id="new-orders-table" class="table table-hover table-xl mb-0">
                                                    <thead>
                                                        <tr>
                                                            <th> Name</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @foreach (var cli in Model.LawyerClients)
                                                        {
                                                            <tr>
                                                                <td>@cli.ClientName</td>
                                                            </tr>
                                                        }
                                                    </tbody>
                                                    <tfoot>
                                                        <tr>
                                                            <th>Name</th>
                                                        </tr>
                                                    </tfoot>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane" id="tab-2-eg5">
                        <div class="p-3">
                            <div class="main-card mb-3 card">
                                <div class="card-header">
                                    <i class="fa fa-fw" aria-hidden="true" title="Copy to use clock-o"></i>&nbsp;
                                    Time Slots
                                </div>
                                <div class="card-body">
                                    <div class="scroll-area-sm">
                                        <div class="scrollbar-container ps--active-y">
                                            <div class="table-responsive">
                                                <table id="new-orders-table" class="table table-hover table-xl mb-0">
                                                    <thead>
                                                        <tr>
                                                            <th>Day</th>
                                                            <th>Slot Type</th>
                                                            <th>Location</th>
                                                            <th>Appoinment Fee</th>
                                                            <th>Charges</th>
                                                            <th>Time From</th>
                                                            <th>Time To</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @foreach (var time in Model.LawerTimings)
                                                        {
                                                            <tr>
                                                                <td>@time.Day</td>
                                                                <td>@time.SlotType</td>
                                                                @if (time.LawyerAddressId != null)
                                                                {
                                                                    var addr = Model.LawyerAddresses.Where(x => x.LawyerAddressId == time.LawyerAddressId).SingleOrDefault().Address;
                                                                    <td>@addr</td>
                                                                }
                                                                else
                                                                {
                                                                    <td></td>
                                                                }
                                                                <td>@time.AppoinmentFee</td>
                                                                <td>@time.Charges</td>
                                                                <td>@time.TimeFrom</td>
                                                                <td>@time.TimeTo</td>
                                                            </tr>
                                                        }
                                                    </tbody>
                                                    <tfoot>
                                                        <tr>
                                                            <th>Day</th>
                                                            <th>Slot Type</th>
                                                            <th>Location</th>
                                                            <th>Appoinment Fee</th>
                                                            <th>Charges</th>
                                                            <th>Time From</th>
                                                            <th>Time To</th>
                                                        </tr>
                                                    </tfoot>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane" id="tab-2-eg6">
                        <div class="p-3">
                            <div class="main-card mb-3 card">
                                <div class="card-header">
                                    <i class="fa fa-fw" aria-hidden="true" title="Copy to use drivers-license"></i>&nbsp;
                                    License
                                </div>
                                <div class="card-body">
                                    <div class="scroll-area-sm">
                                        <div class="scrollbar-container ps--active-y">
                                            <div class="table-responsive">
                                                <table id="new-orders-table" class="table table-hover table-xl mb-0">
                                                    <thead>
                                                        <tr>
                                                            <th>City Name</th>
                                                            <th>City Bar Association</th>
                                                            <th>District Bar Association</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @foreach (var license in Model.LawyerLicenses)
                                                        {
                                                            <tr>
                                                                <td>@license.LicenseCity.CityName</td>
                                                                <td>@license.CityBar</td>
                                                                <td>@license.DistrictBar</td>
                                                            </tr>
                                                        }
                                                    </tbody>
                                                    <tfoot>
                                                        <tr>
                                                            <th>City Name</th>
                                                            <th>City Bar Association</th>
                                                            <th>District Bar Association</th>
                                                        </tr>
                                                    </tfoot>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane" id="tab-2-eg7">
                        <div class="p-3">
                            <div class="main-card mb-3 card">
                                <div class="card-header">
                                    <i class="fa fa-fw" aria-hidden="true" title="Copy to use th-list"></i>&nbsp;Services
                                </div>
                                <div class="card-body">
                                    <div class="scroll-area-sm">
                                        <div class="scrollbar-container ps--active-y">
                                            <div class="table-responsive">
                                                <table id="new-orders-table" class="table table-hover table-xl mb-0">
                                                    <thead>
                                                        <tr>
                                                            <th>Service Name</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @foreach (var service in Model.LawyerCaseCategories)
                                                        {
                                                            <tr>
                                                                <td>@service.CaseCategory.Name</td>
                                                            </tr>
                                                        }
                                                    </tbody>
                                                    <tfoot>
                                                        <tr>
                                                            <th>Service Name</th>
                                                        </tr>
                                                    </tfoot>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane" id="tab-2-eg8">
                        <div class="p-3">
                            <div class="main-card mb-3 card">
                                <div class="card-header">
                                    <i class="fa fa-fw" aria-hidden="true" title="Copy to use location-arrow"></i>&nbsp;Offices
                                </div>
                                <div class="card-body">
                                    <div class="scroll-area-sm">
                                        <div class="scrollbar-container ps--active-y">
                                            <div class="table-responsive">
                                                <table id="new-orders-table" class="table table-hover table-xl mb-0">
                                                    <thead>
                                                        <tr>
                                                            <th>Office Address</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @foreach (var addr in Model.LawyerAddresses)
                                                        {
                                                            <tr>
                                                                <td>@addr.Address</td>
                                                            </tr>
                                                        }
                                                    </tbody>
                                                    <tfoot>
                                                        <tr>
                                                            <th>Service Name</th>
                                                        </tr>
                                                    </tfoot>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
