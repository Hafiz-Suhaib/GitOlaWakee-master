@model IEnumerable<OlaWakeel.Models.Appointment>

@{
    ViewData["Title"] = "Cancel";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}
@{int i = 1;}

<div class="app-page-title">
    <div class="page-title-wrapper">
        <div class="page-title-heading">
            <div class="page-title-icon">
                <i class="lnr-graduation-hat icon-gradient bg-mean-fruit"></i>
            </div>
            <div>
                Lawyer
            </div>
        </div>
    </div>
</div>


<div class="card mb-3">
    <div class="card-header-tab card-header">
        <div class="card-header-title font-size-lg text-capitalize font-weight-normal">
            <i class="header-icon mr-3 text-muted opacity-6"> </i>Cancel Lawyers
        </div>
    </div>
    <div class="card-body">
        <div id="example_wrapper" class="dataTables_wrapper dt-bootstrap4">
            <div class="row">
                <div class="col-sm-12">
                    <table style="width: 100%;" id="example" class="table table-hover table-striped table-bordered">

                     
                        <thead>
                            <tr>
                                <th>Sr#</th>
                                <th>
                                    Name
                                </th>
                                <th>
                                    Experience
                                </th>
                                <th>
                                    Charges
                                </th>
                                <th>
                                    Charges
                                </th>


                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@i</td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Lawyer.FirstName)
                                        @Html.DisplayFor(modelItem => item.Lawyer.LastName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Lawyer.TotalExperience) Years
                                    </td>

                                    <td>
                                      Rs.  @Html.DisplayFor(modelItem => item.Lawyer.VirtualChargesPkr)
                                    </td>
                                    <td>
                                      $  @Html.DisplayFor(modelItem => item.Lawyer.VirtualChargesUs)
                                    </td>
                                   
                                </tr>
                                i++;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>









