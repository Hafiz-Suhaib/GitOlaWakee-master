        <div class="card-body">
            <div id="example_wrapper" class="dataTables_wrapper dt-bootstrap4">

                <div class="row">
                    <div class="col-sm-12">
                        <table style="width: 100%;" id="example" class="table table-hover table-striped table-bordered dataTable dtr-inline listing-datatable" role="grid" aria-describedby="example_info">
                            <thead>
                                <tr>
                                    <th>City Name</th>
                                    <th>District Name</th>
                                    <th>Exist</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var city in Model.LicenseCities)
                                {
                                    <tr>
                                        <td>@city.CityName</td>
                                        <td>@city.LicenseDistrict.DistrictName</td>
                                        <td>@city.LicenseExist</td>
                                        <td width="20%">
                                            <a asp-action="Edit" asp-controller="LicenseCity" asp-route-id="@city.LicenseCityId" class="mb-2 mr-2 btn-icon btn-icon-only btn-shadow btn-dashed btn btn-outline-warning"><i class="lnr-pencil"> </i></a>
                                            <a asp-action="Delete" asp-controller="LicenseCity" asp-route-id="@city.LicenseCityId" class="mb-2 mr-2 btn-icon btn-icon-only btn-shadow btn-dashed btn btn-outline-danger"><i class="lnr-trash"> </i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>City Name</th>
                                    <th>District Name</th>
                                    <th>Exist</th>
                                    <th>Action</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>

            </div>
        </div>
    </div>

