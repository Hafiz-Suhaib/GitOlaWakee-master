@model IEnumerable<OlaWakeel.Models.Customer>

@{
    ViewData["Title"] = "CustomerWithoutAppoint";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}
<div class="app-page-title">
    <div class="page-title-wrapper">
        <div class="page-title-heading">
            <div class="page-title-icon">
                <i class="lnr-user icon-gradient bg-ripe-malin"> </i>
            </div>
            <div>
                Customer Without Appointments
            </div>
        </div>

    </div>
</div>
<div class="card mb-3">
    <div class="card-header-tab card-header">
        <div class="card-header-title font-size-lg text-capitalize font-weight-normal"> Customer Without Appointments List </div>
        <div class="btn-actions-pane-right actions-icon-btn"></div>
    </div>
    <div class="card-body">
        <div id="example_wrapper" class="dataTables_wrapper dt-bootstrap4">
            <div class="row">
                <div class="col-sm-12">
                    <table style="width: 100%;" id="example" class="table table-hover table-striped table-bordered dataTable dtr-inline" role="grid" aria-describedby="example_info">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>City</th>
                                <th>Gender</th>
                                <th>Email</th>
                                <th>Status</th>
                                @*<th>Actions</th>*@
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.FirstName @item.LastName</td>
                                    <td>@item.City</td>
                                    <td>@item.Gender</td>
                                    <td>@item.AppUser.Email</td>
                                    <td>
                                        @if (item.Status == true)
                                        {<div class="badge col-green">Online</div> }
                                        else
                                        { <div class="badge col-red">Offline</div>}
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Name</th>
                                <th>City</th>
                                <th>Experience</th>
                                <th>Email</th>
                                <th>Status</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
