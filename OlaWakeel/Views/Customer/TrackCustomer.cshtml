@model IEnumerable<OlaWakeel.Models.Customer>

@{
    ViewData["Title"] = "TrackCustomer";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}


<div class="app-page-title">
    <div class="page-title-wrapper">
        <div class="page-title-heading">
            <div class="page-title-icon">
                <i class="lnr-graduation-hat icon-gradient bg-mean-fruit"></i>
            </div>
            <div>
                Track Customer
            </div>
        </div>
    </div>
</div>
<div class="main-card mb-3 card">
    <div class="card-body">
        <h5 class="card-title">Track Customer Here</h5>
        <form method="get" asp-action="TrackCustomer">
            <div class="position-relative form-group">
                <label for="exampleEmail" class="">Search Customer</label>
                <input name="searchapp" placeholder="Type here..." type="search" value="@ViewData["customerSearch"]" class="form-control">
                <br />
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


<div class="card mb-3">
    <div class="card-body">


        <div class="col-sm-12">
            <table style="width: 100%;" class="table table-hover table-striped table-bordered dataTable dtr-inline listing-datatable" role="grid" aria-describedby="example_info">
                <thead>
                    <tr>
                        <th>
                            Name
                        </th>
                        <th>
                            Country
                        </th>
                        <th>
                            Contact
                        </th>
                        
                        <th>
                            Action
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.FirstName)
                                @Html.DisplayFor(modelItem => item.LastName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Country)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Contact)
                            </td>
                          
                                @*@if (@Html.DisplayFor(modelItem => item.Status) == true)
                                        return true;*@



                            <td>
                                <a class="mb-2 mr-2 btn-icon btn-icon-only btn-shadow btn-dashed btn btn-outline-info" href="~/Customer/CustomerProfile/@item.CustomerId"><i class="lnr-user"> </i></a>
                            </td>
                        </tr>
                    }

                </tbody>
                <tfoot>
                    <tr>
                        <th>
                            Name
                        </th>
                        <th>
                            Country
                        </th>
                        <th>
                            Contact
                        </th>
                        <th>
                            Action
                        </th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>

</div>



