@model IEnumerable<OlaWakeel.Models.Customer>

@{
    ViewData["Title"] = "riaz";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}
<style>
     .modal {
         /*position: absolute;*/
         top: 50px;
         /*right: 100px;
    bottom: 0;
    left: 0;
    z-index: 10040;
    overflow: auto;
    overflow-y: auto;*/
     }
</style>


<div class="app-page-title">
    <div class="page-title-wrapper">
        <div class="page-title-heading">
            <div class="page-title-icon">
                <i class="lnr-user icon-gradient bg-ripe-malin"> </i>
            </div>
            <div>
                Riaz Practice
                @*<div class="page-title-subheading">This is an example dashboard created using build-in elements and components.</div>*@
            </div>
        </div>

    </div>
</div>
<div class="card mb-3">
    <div class="card-header-tab card-header">
        <div class="card-header-title font-size-lg text-capitalize font-weight-normal">
            <i class="header-icon  mr-3 text-muted opacity-6"> </i>All Customer
        </div>
        <div class="btn-actions-pane-right actions-icon-btn">
            <div class="btn-group dropdown">
                <div tabindex="-1" role="menu" aria-hidden="true" class="dropdown-menu-right rm-pointers dropdown-menu-shadow dropdown-menu-hover-link dropdown-menu">
                    <h6 tabindex="-1" class="dropdown-header">Header</h6>
                    <button type="button" tabindex="0" class="dropdown-item">
                        <i class="dropdown-icon lnr-inbox"> </i><span>Menus</span>
                    </button>
                    <button type="button" tabindex="0" class="dropdown-item">
                        <i class="dropdown-icon lnr-file-empty"> </i><span>Settings</span>
                    </button>
                    <button type="button" tabindex="0" class="dropdown-item">
                        <i class="dropdown-icon lnr-book"> </i><span>Actions</span>
                    </button>
                    <div tabindex="-1" class="dropdown-divider"></div>
                    <div class="p-3 text-right">
                        <button class="mr-2 btn-shadow btn-sm btn btn-link">View Details</button>
                        <button class="mr-2 btn-shadow btn-sm btn btn-primary">Action</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div id="example_wrapper" class="dataTables_wrapper dt-bootstrap4">
            <div class="row">
                <div class="col-sm-12">
                    <table style="width: 100%;" id="example" class="table table-hover table-striped table-bordered dataTable dtr-inline" role="grid" aria-describedby="example_info">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>UserName</th>
                                <th>Email</th>
                                <th>Contact</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{ var count = 0; }
                            @foreach (var item in Model)
                            {
                <tr>

                    <td>@item.FirstName @item.LastName</td>
                    @*@foreach (var user in item.AppUser) {
                        <td>@item.AppUser.UserName</td>
                        <td>@item.AppUser.Email</td>
                        }*@
                    <td>@item.AppUser.UserName</td>
                    <td>@item.AppUser.Email</td>
                    <td>@item.Contact</td>
                  
                    <td>
                        @*<a class="btn tblActnBtn" href="~/DeliveryAreas/ChangeStatus/"><i class="fas fa-toggle-on pt-2"></i></a>*@
                        <a class="mb-2 mr-2 btn-icon btn-icon-only btn-shadow btn-dashed btn btn-outline-success" data-backdrop="false" data-toggle="modal" data-target=".details_@count" href="~/Lawyer/LawyerProfile/@item.AppUser.Id"><i class="fas fa-info-circle"></i></a>
                        <div class="modal bd-example-modal-sm details_@count" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel">
                            <div class="modal-dialog modal-lg">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLongTitle">@item.FirstName @item.LastName</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <!--Popup Open-->

                                    <div class="card-body">
                                        <div id="example_wrapper" class="dataTables_wrapper dt-bootstrap4">
                                            <div class="row">
                                                <div class="col-sm-12">
                                                    <table style="width: 100%;" id="example" class="table table-hover table-striped table-bordered dataTable dtr-inline" role="grid" aria-describedby="example_info">
                                                        <thead>
                                                            <tr>
                                                                <th>Name</th>
                                                                <th>UserName</th>
                                                                <th>Email</th>
                                                                <th>Contact</th>
                                                                <th>Gender</th>
                                                                <th>City</th>
                                                               
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                                <tr>
                                                                    <td>@item.FirstName @item.LastName</td>
                                                                    <td>@item.AppUser.UserName</td>
                                                                    <td>@item.AppUser.Email</td>
                                                                    <td>@item.Contact</td>
                                                                    <td>@item.Gender</td>
                                                                    <td>
                                                                        @item.City
                                                                    </td>
                                                                  
                                                                </tr>
                                                        </tbody>
                                                       
                                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                    </div>


                                    <!--Popup Close-->



                                    @*<div class="modal-body">
                                    <table>
                                        <tr>
                                            <th>Address</th>
                                            <th>Profile Pic</th>
                                        </tr>
                                        <tr><td>@item.Address</td><td><img style="cursor:pointer;width:100px;height:150px;" src="@Url.Content("~/CustomerImages/"+item.ProfilePic)" alt="' + file_data.name + '" /></td></tr>
                                    </table>
                                </div>*@
                                                            @*<div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                    <button type="button" class="btn btn-primary">Save changes</button>
                                </div>*@
                                </div>
                            </div>
                        </div>


                    </td>

                </tr>count++;
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Name</th>
                                <th>UserName</th>
                                <th>Email</th>
                                <th>Contact</th>
                                
                                <th>Actions</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>

        </div>
    </div>
</div>
