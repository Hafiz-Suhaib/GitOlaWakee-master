    <form asp-action="Create">
        <div class="form-group">
            <label for="AppointmentCode">AppointmentCode</label>
            <div>
                <input asp-for="AppointmentCode" type="text" class="form-control" placeholder="AppointmentCode">
            </div>
        </div>
        <div class="form-group">
            <label for="LawyerAddressId">LawyerAddressId</label>
