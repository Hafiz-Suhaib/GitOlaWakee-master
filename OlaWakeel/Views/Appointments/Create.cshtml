            </div>
        </div>
        <div class="form-group">
            <label for="TimeFrom">TimeFrom</label>
            <div>
                <input asp-for="TimeFrom" type="text" class="form-control" placeholder="TimeFrom">
            </div>
        </div>

        <div class="form-group">
            <label for="TimeTo">TimeTo</label>
            <input asp-for="TimeTo" type="text" class="form-control" placeholder="TimeTo">
        </div>
        <div class="form-group">
            <label for="CaseCharges">CaseCharges</label>
            <input asp-for="CaseCharges" type="text" class="form-control" placeholder="CaseCharges">
        </div>
        <div class="form-group">
            <label asp-for="ScheduleDate" class="control-label"></label>
            <input asp-for="ScheduleDate" class="form-control" />
            <span asp-validation-for="ScheduleDate" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="Rating">Rating</label>
            <input asp-for="Rating" type="text" class="form-control" placeholder="Rating">
        </div>
        <div class="form-group">
            <label for="AppoinmentType">AppoinmentType</label>
            <input asp-for="AppoinmentType" type="text" class="form-control" placeholder="AppoinmentType">
        </div>
        <div class="form-group">
            <label for="AppoinmentStatus">AppoinmentStatus</label>
            <input asp-for="AppoinmentStatus" type="text" class="form-control" placeholder="AppoinmentStatus">
        </div>
        <div class="form-group">
            <label asp-for="Date" class="control-label"></label>
            <div>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label for="CustomerId">CustomerId</label>
            <div>
                <select asp-for="CustomerId" class="form-control" asp-items="ViewBag.CustomerId"></select>
            </div>
        </div>
        <div class="form-group">
            <label for="LawyerId">LawyerId</label>
            <div>
                <select asp-for="LawyerId" class="form-control" asp-items="ViewBag.LawyerId"></select>
            </div>
        </div>
        @*<div class="form-group">
                <button type="submit" class="btn btn-primary" name="signup" value="Sign up">Sign up</button>
            </div>*@
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
        <div>
            <a asp-action="Index">Back to List</a>
        </div>
    </form>
</div>


