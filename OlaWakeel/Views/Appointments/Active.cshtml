    ViewData["Title"] = "Active";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}
<div class="app-page-title">
    <div class="page-title-wrapper">
        <div class="page-title-heading">
            <div class="page-title-icon">
                <i class="lnr-graduation-hat icon-gradient bg-mean-fruit"></i>
            </div>
            <div>
                Appointment
            </div>
        </div>
    </div>
</div>
            <div class="card mb-3">
                <div class="card-header-tab card-header">
                    <div class="card-header-title font-size-lg text-capitalize font-weight-normal">
                        Today Appointments
                    </div>

                    @*<div class="btn-actions-pane-right actions-icon-btn">
                        <a href="/Appointments/Create" class="mb-2 mr-2 btn btn-shadow btn-success">Add</a>
                    </div>*@
                </div>
                <div class="card-body">
                    <div id="example_wrapper" class="dataTables_wrapper dt-bootstrap4">
                        <div class="row">
                            <div class="col-sm-12">
                                <div id="example_wrapper" class="dataTables_wrapper dt-bootstrap4">
                                    <div class="row">

                                        <div class="col-sm-12">
                                            <table style="width: 100%;" id="example" class="table table-hover table-striped table-bordered dataTable dtr-inline listing-datatable" role="grid" aria-describedby="example_info">

                                                <thead>
                                                    <tr role="row">
                                                        <th class="sorting" tabindex="0" aria-controls="example" rowspan="1" colspan="1" style="width: 208.2px;" aria-sort="ascending" aria-label="#Serial: activate to sort column descending">AppointmentCode</th>
                                                        <th class="sorting" tabindex="0" aria-controls="example" rowspan="1" colspan="1" style="width: 245.2px;" aria-label="Actions: activate to sort column ascending">CaseCategory</th>
                                                      <th class="sorting" tabindex="0" aria-controls="example" rowspan="1" colspan="1" style="width: 245.2px;" aria-label="Actions: activate to sort column ascending">CaseCharges</th>
                                                        <th class="sorting" tabindex="0" aria-controls="example" rowspan="1" colspan="1" style="width: 245.2px;" aria-label="Actions: activate to sort column ascending">ScheduleDate</th>
                                                        <th class="sorting" tabindex="0" aria-controls="example" rowspan="1" colspan="1" style="width: 245.2px;" aria-label="Actions: activate to sort column ascending">AppoinmentStatus</th>
                                                        <th class="sorting" tabindex="0" aria-controls="example" rowspan="1" colspan="1" style="width: 245.2px;" aria-label="Actions: activate to sort column ascending">Date</th>
                                                      <th> Actions </th>
                                                    </tr>
                                                </thead>
                                                <tbody>


                                                    @foreach (var item in Model)
                                                    {

                                                        <tr role="row" class="odd">
                                                            <td>                                                             
                                                                <button type="button" class="text-left m-0 p-0 btn  btn-block" data-toggle="modal" data-target=".bd-example-modal-lg">@item.AppointmentCode</button>

                                                            </td>


                                                          
                                                            <td> @item.CaseCategoryId </td>
                                                           
                                                            <td> @item.CaseCharges </td>
                                                            <td> @item.ScheduleDate</td>
                                                           
                                                            <td> @item.AppoinmentStatus</td>
                                                            <td> @item.Date</td>
                                                          
                                                            <td>
                                                               
                                                                <a class="btn btn-info" asp-action="Details" asp-route-id="@item.AppoinmentId">
                                                                    <i class="fas fa-pencil-alt"></i>
                                                                </a>
                                                            </td>
                                                        </tr>
                                                    }
                                                </tbody>
                                                <tfoot>
                                                    <tr>
                                                        <th rowspan="1" colspan="1"> AppointmentCode</th>
                                                        <th rowspan="1" colspan="1">CaseCategory</th>
                                                        <th rowspan="1" colspan="1">CaseCharges</th>
                                                        <th rowspan="1" colspan="1">ScheduleDate</th>
                                                        <th rowspan="1" colspan="1">AppoinmentStatus</th>
                                                        <th rowspan="1" colspan="1">Date</th>
                                                        <th rowspan="1" colspan="1">Actions</th>
                                                    </tr>
                                                </tfoot>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Large modal Peactice-->
