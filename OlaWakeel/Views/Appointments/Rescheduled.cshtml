@model IEnumerable<OlaWakeel.Models.Appointment>

@{
    ViewData["Title"] = "Rescheduled";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<div class="app-page-title">
    <div class="page-title-wrapper">
        <div class="page-title-heading">
            <div class="page-title-icon">
                <i class="lnr-graduation-hat icon-gradient bg-mean-fruit"></i>
            </div>
            <div>
                Rescheduled
            </div>
        </div>
    </div>
</div>




<div class="card mb-3">
    <div class="card-header-tab card-header">
        <div class="card-header-title font-size-lg text-capitalize font-weight-normal">
            Rescheduled Appointments
        </div>
        <div class="btn-actions-pane-right actions-icon-btn">

        </div>
    </div>
    <div class="card-body">
        <div id="example_wrapper" class="dataTables_wrapper dt-bootstrap4">

            <div class="row">
                <div class="col-sm-12">
                    <table style="width: 100%;" id="example" class="table table-hover table-striped table-bordered dataTable dtr-inline" role="grid" aria-describedby="example_info">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.TimeFrom)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.TimeTo)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ScheduleDate)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.AppoinmentStatus)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Date)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Customer)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Lawyer)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TimeFrom)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TimeTo)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.ScheduleDate)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.AppoinmentStatus)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Date)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Customer.CustomerId)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Lawyer.LawyerId)
                                </td>
                            </tr>
}
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.TimeFrom)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.TimeTo)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ScheduleDate)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.AppoinmentStatus)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Date)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Customer)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Lawyer)
                                </th>
                                <th></th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>







