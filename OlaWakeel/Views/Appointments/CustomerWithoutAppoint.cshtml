@{int i = 1; }



<div class="app-page-title">
    <div class="page-title-wrapper">
        <div class="page-title-heading">
            <div class="page-title-icon">
                <i class="lnr-user icon-gradient bg-ripe-malin"> </i>
            </div>
            <div>
                Customer Without Appointments
            </div>
        </div>

    </div>
</div>
<div class="card mb-3">
    <div class="card-header-tab card-header">
        <div class="card-header-title font-size-lg text-capitalize font-weight-normal">
            Custome Without Appointments List
        </div>
        <div class="btn-actions-pane-right actions-icon-btn">
          
        </div>
    </div>
    <div class="card-body">
        <div id="example_wrapper" class="dataTables_wrapper dt-bootstrap4">

            <div class="row">
                <div class="col-sm-12">
                    <table style="width: 100%;" id="example" class="table table-hover table-striped table-bordered dataTable dtr-inline" role="grid" aria-describedby="example_info">
                        <thead>
                            <tr>
                                <th>Sr#</th>
                                <th>FirstName</th>
                                <th>LastName</th>
                                <th>City</th>
                                <th>Date</th>
                                <th>Status</th>
                                @*<th>Actions</th>*@
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                <tr>
                    <td>@i</td>
                    <td>@item.FirstName </td>
                    <td>@item.LastName</td>
                    <td>@item.City</td>
                    <td>@item.Date</td>
                    <td>
                        @if (item.Status == true)
                        {<div class="badge col-green">Online</div> }
                        else
                        { <div class="badge col-red">Offline</div>}
                    </td>
                    @*<td>
                        <a class="mb-2 mr-2 btn-icon btn-icon-only btn-shadow btn-dashed btn btn-outline-warning" href="~/Customer/EditCustomer/@item.CustomerId"><i class="lnr-pencil"></i></a>
                        <a class="mb-2 mr-2 btn-icon btn-icon-only btn-shadow btn-dashed btn btn-outline-danger" href="~/Appointments/Delete/@item.CustomerId"><i class="lnr-trash"> </i></a>
                        @if (item.Status ==true)
                        {<a class="mb-2 mr-2 btn-icon btn-icon-only btn-shadow btn-dashed btn btn-outline-success" onclick="ChangeCustomerStatus(@item.CustomerId)" ><i class="fa fa-fw" aria-hidden="true" title="Click For Offline"></i></a> }
                        else
                        { <a class="mb-2 mr-2 btn-icon btn-icon-only btn-shadow btn-dashed btn btn-outline-danger" onclick="ChangeCustomerStatus(@item.CustomerId)"><i class="fa fa-fw" aria-hidden="true" title="Click For online"></i></a>}

                        <a class="mb-2 mr-2 btn-icon btn-icon-only btn-shadow btn-dashed btn btn-outline-info" href="~/Customer/CustomerProfile/@item.CustomerId"><i class="lnr-user"> </i></a>
                    </td>*@
                </tr>
                i++;
                }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Sr#</th>
                                <th>FirstName</th>
                                <th>LastName</th>
                                <th>City</th>
                                <th>Date</th>
                                <th>Status</th>
